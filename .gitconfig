[user]
    # Update these with your information
    name = Your Name
    email = your.email@example.com

[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/.gitignore_global
    
[init]
    defaultBranch = main

[color]
    ui = auto
    
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[alias]
    # Short status
    st = status -sb
    
    # Commit shortcuts
    ci = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit
    
    # Branch operations
    br = branch
    co = checkout
    cob = checkout -b
    
    # Log shortcuts
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --oneline --graph --decorate --all
    last = log -1 HEAD --stat
    
    # Diff shortcuts
    df = diff
    dfc = diff --cached
    
    # Pull/Push shortcuts
    pl = pull
    ps = push
    pf = push --force-with-lease
    
    # Stash shortcuts
    sl = stash list
    sa = stash apply
    ss = stash save
    
    # Show what files changed in last commit
    changed = diff --name-only HEAD^ HEAD
    
    # Undo last commit but keep changes
    undo = reset HEAD~1 --mixed
    
    # Remove all local branches except main/master
    cleanup = "!git branch | grep -v 'main\\|master' | xargs git branch -D"
    
    # Show contributors
    contributors = shortlog -sn
    
    # Find branches containing commit
    fb = "!f() { git branch -a --contains $1; }; f"
    
    # Find commits by source code
    fc = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"
    
    # Find commits by commit message
    fm = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"
    
[push]
    default = simple
    followTags = true
    
[pull]
    rebase = false
    
[fetch]
    prune = true
    
[merge]
    tool = vimdiff
    conflictstyle = diff3
    
[diff]
    tool = vimdiff
    
[help]
    autocorrect = 1
    
[credential]
    helper = cache --timeout=3600